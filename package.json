{
    "name": "vscode-gitflow",
    "displayName": "Git-Flow",
    "description": "Git-Flow support for VS Code",
    "version": "0.1.0-beta",
    "engines": {
        "vscode": "^1.63.0"
    },
    "keywords": [
        "git flow",
        "gitflow",
        "git-flow",
        "git"
    ],
    "categories": [
        "Other",
        "SCM Providers"
    ],
    "icon": "media/icon.png",
    "activationEvents": [
        "onView:gitflowExplorer",
        "onView:gitflowTags"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Serhioromano/vscode-gitflow"
    },
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "GitFlow",
            "properties": {
                "gitflow.master": {
                    "type": "string",
                    "default": "master",
                    "description": "Default master branch for git-flow"
                },
                "gitflow.develop": {
                    "type": "string",
                    "default": "develop",
                    "description": "Default develop branch for git-flow"
                },
                "gitflow.release": {
                    "type": "string",
                    "default": "release",
                    "description": "Default release branch for git-flow"
                },
                "gitflow.feature": {
                    "type": "string",
                    "default": "feature",
                    "description": "Default feature branch for git-flow"
                },
                "gitflow.hotfix": {
                    "type": "string",
                    "default": "hotfix",
                    "description": "Default hotfix branch for git-flow"
                }
            }
        },
        "commands": [
            {
                "command": "gitflow.test",
                "title": "Test",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.refreshB",
                "title": "Refresh branches",
                "category": "Git-Flow",
                "icon": {
                    "dark": "resources/dark/refresh.svg",
                    "light": "resources/light/refresh.svg"
                }
            },
            {
                "command": "gitflow.refreshT",
                "title": "Refresh versions",
                "category": "Git-Flow",
                "icon": {
                    "dark": "resources/dark/refresh.svg",
                    "light": "resources/light/refresh.svg"
                }
            },
            {
                "command": "gitflow.pushTags",
                "title": "Push all tags to origin",
                "category": "Git-Flow",
                "icon": {
                    "dark": "resources/dark/arrow-up.svg",
                    "light": "resources/light/arrow-up.svg"
                }
            },
            {
                "command": "gitflow.pushTag",
                "title": "Push tag to origin",
                "category": "Git-Flow",
                "icon": {
                    "dark": "resources/dark/arrow-up.svg",
                    "light": "resources/light/arrow-up.svg"
                }
            },
            {
                "command": "gitflow.fetchAllBranches",
                "title": "Fetch all remote branches",
                "category": "Git-Flow",
                "icon": {
                    "dark": "resources/dark/arrow-down.svg",
                    "light": "resources/light/arrow-down.svg"
                }
            },
            {
                "command": "gitflow.newFeature",
                "title": "Feature - Start",
                "category": "Git-Flow",
                "icon": {
                    "dark": "resources/dark/add.svg",
                    "light": "resources/light/add.svg"
                }
            },
            {
                "command": "gitflow.trackFeature",
                "title": "Feature - Track",
                "category": "Git-Flow",
                "icon": {
                    "dark": "resources/dark/cloud-download.svg",
                    "light": "resources/light/cloud-download.svg"
                }
            },
            {
                "command": "gitflow.checkoutFeature",
                "title": "Feature - Checkout",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.finishFeature",
                "title": "Feature - Finish",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.publishFeature",
                "title": "Feature - Publish",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.rebaseFeature",
                "title": "Feature - Rebase",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.deleteFeature",
                "title": "Feature - Delete",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.newRelease",
                "title": "Release - Start",
                "category": "Git-Flow",
                "icon": {
                    "dark": "resources/dark/add.svg",
                    "light": "resources/light/add.svg"
                }
            },
            {
                "command": "gitflow.trackRelease",
                "title": "Release - Track",
                "category": "Git-Flow",
                "icon": {
                    "dark": "resources/dark/cloud-download.svg",
                    "light": "resources/light/cloud-download.svg"
                }
            },
            {
                "command": "gitflow.publishRelease",
                "title": "Release - Publish",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.deleteRelease",
                "title": "Release - Delete",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.finishRelease",
                "title": "Release - Finish",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.rebaseRelease",
                "title": "Release - Rebase",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.newHotfix",
                "title": "Hotfix - Start",
                "category": "Git-Flow",
                "icon": {
                    "dark": "resources/dark/add.svg",
                    "light": "resources/light/add.svg"
                }
            },
            {
                "command": "gitflow.finishHotfix",
                "title": "Hotfix - Finish",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.publishHotfix",
                "title": "Hotfix - Publish",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.deleteHotfix",
                "title": "Hotfix - Delete",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.rebaseHotfix",
                "title": "Hotfix - Rebase",
                "category": "Git-Flow"
            },
            {
                "command": "gitflow.init",
                "title": "Init Git Flow",
                "category": "Git-Flow"
            }
        ],
        "views": {
            "scm": [
                {
                    "id": "gitflowExplorer",
                    "name": "Gitflow"
                },
                {
                    "id": "gitflowTags",
                    "name": "Versions"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "gitflow.refreshB",
                    "when": "view == gitflowExplorer",
                    "group": "navigation"
                },
                {
                    "command": "gitflow.fetchAllBranches",
                    "when": "view == gitflowExplorer",
                    "group": "navigation"
                },
                {
                    "command": "gitflow.refreshB",
                    "when": "view == gitflowExplorer"
                },
                {
                    "command": "gitflow.fetchAllBranches",
                    "when": "view == gitflowExplorer"
                },
                {
                    "command": "gitflow.init",
                    "when": "view == gitflowExplorer"
                },
                {
                    "command": "gitflow.newRelease",
                    "when": "view == gitflowExplorer"
                },
                {
                    "command": "gitflow.newFeature",
                    "when": "view == gitflowExplorer"
                },
                {
                    "command": "gitflow.newHotfix",
                    "when": "view == gitflowExplorer"
                },
                {
                    "command": "gitflow.refreshT",
                    "when": "view == gitflowTags",
                    "group": "navigation"
                },
                {
                    "command": "gitflow.pushTags",
                    "when": "view == gitflowTags",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "gitflow.pushTag",
                    "when": "view == gitflowTags && viewItem == local",
                    "group": "inline"
                },
                {
                    "command": "gitflow.newFeature",
                    "when": "view == gitflowExplorer && viewItem == f"
                },
                {
                    "command": "gitflow.newRelease",
                    "when": "view == gitflowExplorer && viewItem == r"
                },
                {
                    "command": "gitflow.newHotfix",
                    "when": "view == gitflowExplorer && viewItem == h"
                },
                {
                    "command": "gitflow.newFeature",
                    "when": "view == gitflowExplorer && viewItem == f",
                    "group": "inline"
                },
                {
                    "command": "gitflow.newRelease",
                    "when": "view == gitflowExplorer && viewItem == r",
                    "group": "inline"
                },
                {
                    "command": "gitflow.newHotfix",
                    "when": "view == gitflowExplorer && viewItem == h",
                    "group": "inline"
                },
                {
                    "command": "gitflow.trackFeature",
                    "when": "view == gitflowExplorer && viewItem == origin_feature"
                },
                {
                    "command": "gitflow.trackFeature",
                    "when": "view == gitflowExplorer && viewItem == origin_feature",
                    "group": "inline"
                },
                {
                    "command": "gitflow.trackRelease",
                    "when": "view == gitflowExplorer && viewItem == origin_release"
                },
                {
                    "command": "gitflow.trackRelease",
                    "when": "view == gitflowExplorer && viewItem == origin_release",
                    "group": "inline"
                },
                {
                    "command": "gitflow.publishHotfix",
                    "when": "view == gitflowExplorer && viewItem == hotfix_local"
                },
                {
                    "command": "gitflow.rebaseHotfix",
                    "when": "view == gitflowExplorer && viewItem == hotfix ||  viewItem == hotfix_local"
                },
                {
                    "command": "gitflow.finishHotfix",
                    "when": "view == gitflowExplorer && viewItem == hotfix ||  viewItem == hotfix_local"
                },
                {
                    "command": "gitflow.deleteHotfix",
                    "when": "view == gitflowExplorer && viewItem == hotfix ||  viewItem == hotfix_local"
                },
                {
                    "command": "gitflow.publishFeature",
                    "when": "view == gitflowExplorer && viewItem == feature_local"
                },
                {
                    "command": "gitflow.rebaseFeature",
                    "when": "view == gitflowExplorer && viewItem == feature ||  viewItem == feature_local"
                },
                {
                    "command": "gitflow.finishFeature",
                    "when": "view == gitflowExplorer && viewItem == feature ||  viewItem == feature_local"
                },
                {
                    "command": "gitflow.deleteFeature",
                    "when": "view == gitflowExplorer && viewItem == feature ||  viewItem == feature_local"
                },
                {
                    "command": "gitflow.publishRelease",
                    "when": "view == gitflowExplorer && viewItem == release_local"
                },
                {
                    "command": "gitflow.rebaseRelease",
                    "when": "view == gitflowExplorer && viewItem == release_local"
                },
                {
                    "command": "gitflow.finishRelease",
                    "when": "view == gitflowExplorer && viewItem == release ||  viewItem == release_local"
                },
                {
                    "command": "gitflow.deleteRelease",
                    "when": "view == gitflowExplorer && viewItem == release ||  viewItem == release_local"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "@vscode/test-electron": "^2.0.3",
        "eslint": "^8.6.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "typescript": "^4.5.4",
        "vsce": "^2.6.4"
    }
}
